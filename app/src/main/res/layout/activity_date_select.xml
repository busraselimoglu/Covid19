<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".menu.home.DateSelect">

    <ImageView
            android:id="@+id/imageBack"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_margin="@dimen/_8sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_back"
            android:tint="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/calendarView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.005"
            app:layout_constraintVertical_bias="0.153"/>
    <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textView"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            tools:text="Select Date" android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.106"/>
    <TextView
            android:id="@+id/textViewClock"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarView"
            tools:text="Select Clock" android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.892"/>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imageAccept"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.39" app:layout_constraintVertical_bias="0.082">
        <TextView
                android:id="@+id/clockText9"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="09.00"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="@dimen/_20sdp"
                android:background="@drawable/button_rectangle_green"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:layout_row="0"
                android:layout_column="0"/>
        <TextView
                android:id="@+id/clockText10"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="10.00"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="@dimen/_20sdp"
                android:background="@drawable/button_rectangle_green"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_row="0"
                android:layout_column="1"/>
        <TextView
                android:id="@+id/clockText11"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="11.00"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="@dimen/_20sdp"
                android:background="@drawable/button_rectangle_green"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_row="0"
                android:layout_column="2"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imageAccept" app:layout_constraintHorizontal_bias="0.39"
            android:layout_marginBottom="104dp">

        <TextView
                android:id="@+id/clockText13"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="13.00"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="@dimen/_20sdp"
                android:background="@drawable/button_rectangle_green"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_row="1"
                android:layout_column="0"/>
        <TextView
                android:id="@+id/clockText14"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="14.00"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="@dimen/_20sdp"
                android:background="@drawable/button_rectangle_green"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_row="1"
                android:layout_column="1"/>
        <TextView
                android:id="@+id/clockText15"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="15.00"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="@dimen/_20sdp"
                android:background="@drawable/button_rectangle_green"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_row="1"
                android:layout_column="2"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/imageAccept"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_60sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:background="@drawable/background_accept_invitation"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_accept"
            android:tint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:id="@+id/imageReject"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_60sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:background="@drawable/background_reject_invivation"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_reject"
            android:tint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>